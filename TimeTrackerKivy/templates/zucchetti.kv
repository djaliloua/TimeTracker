
#:import Zucchetti zucchetti

<TimeCard>
    padding: "4dp"
    size_hint: 1, "100dp"
    MDBoxLayout:
        orientation: "vertical"
        margin: 10
        #md_bg_color: 1, 0, 0, .5
        MDLabel:
            text: root.time_value
            id: tm
            #md_bg_color: "yellow"
            halign: "center"
            font_style: "digital_font"
        MDBoxLayout:
            MDButton:
                style: "elevated"
                on_press: root.on_entrance(self)
                id: entrance_btn
                MDButtonText:
                    text: "I"

            MDLabel:
                text: root.date_value
                id: date
                #md_bg_color: 1, 0, 0, .5
                halign: "center"
                #font_style: "custom_font"
            MDButton:
                style: "elevated"
                on_press: root.on_exit(self)
                id: exit_btn
                MDButtonText:
                    text: "O"



<BodyHeader>:
    MDLabel:
        text: root.left_label
        #md_bg_color: "orange"
        halign: "center"
    MDLabel:
        id: right_label
        text: root.right_label
        #md_bg_color: "yellow"
        halign: "center"


<BodyLabel>:
    orientation: "vertical"


<BodyHeaderControl>:
    MDBoxLayout:
        orientation: "vertical"
        BodyHeader:
            id: lunch_rem_time
            left_label: "Lunch rem. Time"
            right_label: "None"
        BodyHeader:
            id: act_time_lunch
            left_label: "Time spent for lunch"
            right_label: "None"
        BodyHeader
            id: expected_end_lunch
            left_label: "Expected end lunch"
            right_label: "None"
        BodyHeader:
            id: exp_exit_time
            left_label: "Expected exit time"
            right_label: "None"


<Body>
    padding: "4dp"
    size_hint: 1, "100dp"
    #md_bg_color: app.theme_cls.primary_color
    MDBoxLayout:
        orientation: "vertical"
        #md_bg_color: "yellow"
        BodyLabel:
            id: body_label



<TimerControl>
    padding: "4dp"
    size_hint: 1, "100dp"
    MDBoxLayout:
        MDLabel:
            text: "00:00"
            id: timer_id
            halign: "center"
            font_style: "digital_font"

